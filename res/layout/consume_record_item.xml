<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="235dp"
    android:layout_height="295dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:background="@color/month_item_unselected" >

        <TextView
            android:id="@+id/record_license"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/record_oilgun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/record_oilquality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/record_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/record_gross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/record_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/background"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:background="@drawable/btn_card_grey"
            android:gravity="center"
            android:text="@string/cleared"
            android:textColor="@color/background"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>